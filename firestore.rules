rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated and is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /debts/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }
    
    match /credits/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }
    
    match /testaments/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }
    
    match /contacts/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    // User profile (onboarding, KVKK acceptance)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /assets/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /trusts/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /religious_obligations/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /forgiveness_requests/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /charity_wills/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /projects/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /guardianship/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /funeral_plan/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /activity_log/{userId}/events/{event} {
      allow read, write: if isOwner(userId);
    }

    match /favorites/{userId}/items/{item} {
      allow read, write: if isOwner(userId);
    }

    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId); // Usually handled by webhooks, but allowing for simple client-side updates (trial start)
    }
  }
}
